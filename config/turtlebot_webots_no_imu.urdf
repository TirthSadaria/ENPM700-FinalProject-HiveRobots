<?xml version="1.0" ?>
<robot name="TurtleBot3 Burger Webots">
    <webots>
        <device reference="LDS-01" type="Lidar">
            <ros>
                <enabled>true</enabled>
                <updateRate>3</updateRate>
                <!-- Reduced from 5 to 3 Hz to prevent queue overflow -->
                <!-- Use absolute topic name - driver publishes to /scan globally -->
                <!-- Launch file will remap this to namespaced version -->
                <topicName>/scan</topicName>
                <alwaysOn>false</alwaysOn>
                <frameName>LDS-01</frameName>
            </ros>
        </device>

        <!-- IMU plugin removed - not needed for 2D SLAM and warehouse world doesn't have IMU -->

        <plugin type="webots_ros2_control::Ros2Control" />

        <!-- type="package_name.file_name.class_name" -->
        <plugin type="webots_ros2_turtlebot.plugin_example.PluginExample">
            <parameterExample>someValue</parameterExample>
        </plugin>
    </webots>

    <ros2_control name="WebotsControl" type="system">
        <hardware>
            <plugin>webots_ros2_control::Ros2ControlSystem</plugin>
        </hardware>
        <joint name="right wheel motor">
            <state_interface name="position"/>
            <command_interface name="velocity"/>
        </joint>
        <joint name="left wheel motor">
            <state_interface name="position"/>
            <command_interface name="velocity"/>
        </joint>
    </ros2_control>
</robot>
